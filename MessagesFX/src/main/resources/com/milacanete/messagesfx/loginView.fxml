<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="226.0" prefWidth="369.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.milacanete.messagesfx.controllers.LoginController">
      <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <Label prefWidth="60.0" text="User:" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="UserTextField" HBox.hgrow="ALWAYS" />
      </HBox>
      <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <Label prefWidth="60.0" text="Password:" HBox.hgrow="ALWAYS" />
            <PasswordField fx:id="PasswordField" HBox.hgrow="ALWAYS" />
      </HBox>
      <HBox alignment="CENTER_LEFT" fillHeight="false" VBox.vgrow="ALWAYS">
            <Label fx:id="ErrorRegisteredLabel" text="User or password incorrect" textFill="#ae1f1f" visible="false" />
      </HBox>
      <Button fx:id="LoginButton" mnemonicParsing="false" text="Login" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="5.0" left="40.0" right="40.0" top="5.0" />
         </padding>
      </Button>
      <Hyperlink fx:id="NewAccountHyperlink" text="I don't have an account yet" VBox.vgrow="ALWAYS">
         <font>
            <Font size="13.0" />
         </font>
      </Hyperlink>
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
