<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="255.0" prefWidth="505.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.milacanete.messagesfx.controllers.RegisterController">
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox alignment="CENTER" prefHeight="304.0" prefWidth="219.0" spacing="60.0" HBox.hgrow="ALWAYS">
                  <VBox alignment="CENTER" prefHeight="140.0" prefWidth="275.0" VBox.vgrow="ALWAYS">
                        <HBox alignment="CENTER" prefHeight="0.0" spacing="15.0" VBox.vgrow="ALWAYS">
                              <Label prefWidth="66.5" text="User:" />
                              <TextField fx:id="UserTextField" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
                              <Label prefWidth="66.5" text="Password:" />
                              <PasswordField fx:id="PasswordField" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER" fillHeight="false" spacing="15.0" VBox.vgrow="ALWAYS">
                              <Label text="Repeat pass:" />
                              <PasswordField fx:id="ConfirmPasswordField" HBox.hgrow="ALWAYS" />
                        </HBox>
                  </VBox>
                  <HBox alignment="CENTER" spacing="30.0">
                        <Button fx:id="CancelButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="120.0" text="Cancel" HBox.hgrow="ALWAYS" />
                        <Button fx:id="RegisterButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="120.0" text="Register" HBox.hgrow="ALWAYS" />
                  </HBox>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0" HBox.hgrow="ALWAYS">
                  <ImageView fx:id="AvatarImageView" fitHeight="160.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="SelectImageButton" mnemonicParsing="false" prefWidth="100.0" text="Select image" VBox.vgrow="ALWAYS" />
            </VBox>
      </HBox>
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
   </padding>
</AnchorPane>
